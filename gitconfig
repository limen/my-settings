[core]
  pager = more
[alias]
  co = checkout
  ss = status
  cm = commit -m
  cmm = commit --amend
  br = branch
  bm = branch -m
  bd = branch -D
  cb = checkout -b
  df = diff
  ls = log --stat
  lp = log -p
  pl = pull
  plr = pull --rebase
  ph = push
  pho = push -u origin
  # make local branch to track remote one, git track <remove-branch> <local-branch>
  track = branch -u
  # get logs on deleted file, git deleted <filepath>
  deleted = log --all --full-history --
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
